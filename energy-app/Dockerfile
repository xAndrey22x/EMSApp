FROM node:18 AS build

WORKDIR /app
COPY package.json yarn.lock ./
RUN yarn install
COPY . .

ARG REACT_APP_USER_API_URL
ARG REACT_APP_DEVICE_API_URL
ARG REACT_APP_MONITORING_WS_URL
ARG REACT_APP_CHAT_WS_URL

ENV REACT_APP_USER_API_URL=${REACT_APP_USER_API_URL}
ENV REACT_APP_DEVICE_API_URL=${REACT_APP_DEVICE_API_URL}
ENV REACT_APP_MONITORING_WS_URL=${REACT_APP_MONITORING_WS_URL}
ENV REACT_APP_CHAT_WS_URL=${REACT_APP_CHAT_WS_URL}

RUN yarn build

FROM nginx:alpine
COPY --from=build /app/build /usr/share/nginx/html

COPY nginx.conf /etc/nginx/conf.d/default.conf

EXPOSE 80

CMD ["nginx", "-g", "daemon off;"]
